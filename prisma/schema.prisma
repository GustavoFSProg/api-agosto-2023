// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
}

model Products {
  id        String   @id @default(uuid())
  name      String   @unique
  price     Float
  image     String
  createdAt DateTime @default(now())
}
